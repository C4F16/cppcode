

































































Q 49 
#include <iostream>
using namespace std;

int main() {
    int pin;
    const int correctPin = 1234;
    const int balance = 7500;

    do {
        cout << "Enter your ATM PIN: ";
        cin >> pin;

        if (pin == correctPin) {
            cout << "Your Balance is: " << balance << endl;
        } else {
            cout << "Wrong PIN" << endl;
        }
    } while (pin != correctPin);

    return 0;
}

