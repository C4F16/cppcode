q8
#include <iostream>
using namespace std;

int main() {
    int mark;
    cout << "Enter Mark: ";
    cin >> mark;

    if (mark >= 50) {
        cout << "PASS" << endl;
    } else {
        cout << "Fail" << endl;
    }

    return 0;
}
